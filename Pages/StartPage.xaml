<Page x:Class="TicTacToe.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TicTacToe.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">

    <StackPanel VerticalAlignment="Center">
        <TextBlock Text="Select Game Mode:" FontSize="16" />
        <ComboBox x:Name="GameModeBox" SelectionChanged="GameModeBox_SelectionChanged">
            <ComboBoxItem Content="1 x 1" Tag="PvP" />
            <ComboBoxItem Content="Against Computer" Tag="PvC" />
        </ComboBox>

        <TextBlock x:Name="PlayAsTxt" Text="Play As:" FontSize="16" Visibility="Hidden" />
        <ComboBox x:Name="PlayAsBox" Visibility="Hidden" SelectionChanged="PlayAsBox_SelectionChanged">
            <ComboBoxItem Content="Player 1" Tag="1" />
            <ComboBoxItem Content="Player 2" Tag="2" />
        </ComboBox>

        <TextBlock Text="Player 1:" />
        <TextBox x:Name="Player1NameTxt" IsEnabled="False" />

        <TextBlock Text="Player 2:" />
        <TextBox x:Name="Player2NameTxt" IsEnabled="False" />

        <TextBlock x:Name="ErrorMessageTxt" Foreground="Red" />

        <Button Content="Start Game" Click="StartGame_Click"></Button>
    </StackPanel>
</Page>
